  gem 'sass-rails',   '~> 5.0'
  gem 'coffee-rails', '~> 4.2'
  gem 'uglifier', '>= 1.3.0'
end

gem 'bootstrap-sass', '~> 3.3.7'
gem 'jquery-rails'
gem 'turbolinks'
gem 'twilio-ruby', '~> 5.28.0'

group :test do
  gem 'byebug'
  gem 'rspec-rails'
  gem 'rails-controller-testing'
  gem 'database_cleaner'
end

group :development do
  gem 'pry-rails'
end
